<h1>List of all Users</h1>

<table>

    <tr>
        <th>ID</th>

        <th>User Name</th>
        <th>User Email</th>
        <th>Articles Count</th>

    </tr>

        <%= @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.username, user_path(user) %></td>

            <td><%= user.email %></td>
            <td><%= user.articles.count%></td>
            <% if logged_in? and current_user.admin? %>
                <td><%= link_to "Delete this user", user_path(user), method: :delete,
                data: { confirm: "Are you sure you want to delete the user and all their articles?" } %></td>
            <% end %>
            <br/>
        </tr>
        <%end%>


</table>